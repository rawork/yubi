<div id="filter">
    <form method="post" id="form-filter" action="{{ baseRef }}">
        <h6>Фильтры</h6>
        <input type="hidden" id="filter-type" name="filter_type" value="set" />
        <table class="table table-condensed table-striped">
            <tr>
                <td align="left" width="150">ID</td>
                <td><input class="form-control" type="text" name="search_filter_id" value="{{ search_filter_id }}"></td>
            </tr>
            {% for field in fields %}
                {% if field.search %}
                    <tr>
                        <td align="left" width="100">{{ field.title }}</td>
                        <td>{{ field.searchinput }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
        <div class="btn-group">
            <button class="btn btn-default">Искать</button>
            <button class="btn btn-default" id="btn-filter-cancel" data-type="cancel">Отменить фильтры</button>
        </div>
    </form>
</div>