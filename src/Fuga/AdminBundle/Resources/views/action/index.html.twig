{% extends '@Admin/layout.html.twig' %}

{% block content %}
<h4>{{ title }}{% if message %}: {{ message }}{% endif %}</h4>
<div class="admin-content">
{{ render('Fuga:Admin:Menu:entity', {'links': links}) }}
<br>
{{ paginator.render() }}
<form id="frmGroupUpdate" name="frmGroupUpdate" action="{{ path('admin_entity_groupedit', {'state': state, 'module': module, 'entity': entity}) }}" method="post">
<input type="hidden" name="edited" value="1">
<table class="table table-condensed table-normal table-striped">
<thead>
<tr>
<th width="1%"><input type="checkbox" id="list-checker"></th>
<th width="1%">#</th>
{% for field in fields %}
	{% if field.width %}
	<th width="{{ field.width }}">{{ field.title }}</th>
	{% endif %}
{%  endfor %}
<th class="text-center"><i class="fa fa-bars" aria-hidden="true"></i></th>
</tr>
</thead>
{{ tableData }}
</table>
<div class="form-inline" id="control">
	<div class="form-group">
		<div class="input-group">
			<span class="input-group-addon" id="basic-addon1">Для выбранных:</span>
			<div class="btn-group" role="group" aria-label="..." aria-describedby="basic-addon1">

				{% if showGroupSubmit %}
				<a class="btn btn-default" title="Сохранить" id="btn-group-save" data-check="false"><i class="fa fa-floppy-o" aria-hidden="true"></i> Cохранить</a>
				{% endif %}
				<a class="btn btn-default" title="Изменить" id="btn-group-edit" data-check="true"><i class="fa fa-pencil" aria-hidden="true"></i> Редактировать</a>
				<a class="btn btn-danger" title="Удалить" id="btn-group-delete"><i class="fa fa-trash-o icon-white" aria-hidden="true"></i> Удалить</a>
			</div>
		</div>
	</div>
	{% if rpps %}
	<div class="form-group rpp">
		<div class="input-group">
			<span class="input-group-addon">&nbsp;&nbsp;На странице:&nbsp;&nbsp;</span>
			<select id="select-rpp" class="form-control col-sm-3" name="rpp" data-table="{{ tableName }}" data-url="{{ path('admin_entity_rpp') }}">
			{% for rpp in rpps %}
			<option value="{{ rpp }}" {% if rowPerPage == rpp %} selected{% endif %}>{{ rpp }}</option>
			{% endfor %}
			</select>
		</div>
	</div>		
	{% endif %}
</div>
<input type="hidden" name="ids" id="ids" value="{{ ids }}">
</form>
{{ paginator.render() }}
{{ filters }}
</div>
{% endblock %}